{{ 'style/reviewStyle.css' | asset_url | stylesheet_tag }}

{% assign subscription_plan = shop.metafields.app_subscription.current_plan %}

<div class="shopify-product-reviews">
  {% render 'subscription_content' %}

  <div class="columns">
    <div class="column">
      <h2>Customer reviews</h2>
      <div id="global-ratings">
        <!-- Ratings distribution will be dynamically inserted here -->
      </div>
      <h3>Review this product</h3>
      <p>Share your thoughts with other customers</p>
      <button type="button" class="js-modal-trigger" data-target="open-modal">Write a customer review</button>
    </div>
    <div class="column">
      <div id="reviews-list">
        <!-- Reviews will be dynamically inserted here -->
      </div>
    </div>
  </div>

  <div class="modal" id="open-modal">
    <div class="modal-content">
      <div class="box">
        {% render 'review_form' %}
      </div>
    </div>
    <button class="modal-close is-large" aria-label="close">Close</button>
  </div>
</div>

<script type="module" src="{{ 'js/reviewFormHandler.js' | asset_url }}"></script>

<script
  type="module"
>
  import { isFeatureEnabled } from '{{ 'js/isFeatureEnabled.js' | asset_url }}';
  import { fetchSettings } from '{{ 'js/fetchSettings.js' | asset_url }}';
  import { getSubscriptionPlan } from '{{ 'js/fetchSubscription.js' | asset_url }}';
  import { fetchRatings, displayRatings } from '{{ 'js/fetchRatings.js' | asset_url }}';
  import { fetchReviews, displayReviews } from '{{ 'js/fetchReviews.js' | asset_url }}';
  import { handleFormSubmission } from '{{ 'js/handleFormSubmission.js' | asset_url }}';
  import { setupModalHandlers } from '{{ 'js/modalHandlers.js' | asset_url }}';
  import { setupStarRating } from '{{ 'js/starRating.js' | asset_url }}';

  document.addEventListener('DOMContentLoaded', async function () {
    const apiEndpoint = 'https://revolution-thousands-smoking-der.trycloudflare.com';
    const shopName = document.getElementById('shop-name').value;
    const productId = document.getElementById('product-id').value;

    const settings = await fetchSettings(apiEndpoint, shopName);
    const subscriptionPlan = getSubscriptionPlan();

    setupStarRating();
    setupModalHandlers();

    await fetchRatings(apiEndpoint, productId, shopName, displayRatings);
    await fetchReviews(apiEndpoint, productId, shopName, displayReviews);

    document.getElementById('review-form').addEventListener('submit', async function (event) {
      event.preventDefault();
      const formData = new FormData(this);
      await handleFormSubmission(apiEndpoint, formData, () => fetchReviews(apiEndpoint, productId, shopName, displayReviews));
    });
  });
</script>

{% schema %}
{
  "name": "Product Reviews",
  "target": "section",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product",
      "autofill": true
    }
  ]
}
{% endschema %}
